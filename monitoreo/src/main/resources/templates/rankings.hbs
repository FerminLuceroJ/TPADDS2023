<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Administracion de Usuarios</title>

    <link rel = "stylesheet" href="/public/css/administracionPantallas.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
</head>
<body class="body">

      <!-- Barra de Navegacion -->
      {{#if esAdmin}}
          {{> navbarAdmin}}
      {{else}}
          {{> navbarUsuario}}
      {{/if}}
      <!-- Barra de Navegacion -->

      <!-- Tabla de Ranking 1 -->

<div class="container mt-4 table-container">
  <h3 class="text-center">Rankings Promedio Mayor Cierre:</h3>
  <div class="table-responsive">
    <table class="table table-striped table-hover">
      <tr>
        <th>Entidad</th>
        <th>MayorPromedioDeCierre</th>
      </tr>
      <tbody>
        {{#each registrosDeMayorPromedioCierre}}
        <tr>
          <td>{{this.nombreEntidad}}</td>
          <td>{{this.valor}}</td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>

<div class="container mt-4 table-container">
  <h3 class="text-center">Rankings Mayor Cantidad Incidentes:</h3>
  <div class="table-responsive">
    <table class="table table-striped table-hover">
      <tr>
        <th>Entidad</th>
        <th>MayorCantidadIncidentes</th>
      </tr>
      <tbody>
        {{#each registrosDeMayorCantidadDeIncidentesEnSemana}}
        <tr>
          <td>{{this.nombreEntidad}}</td>
          <td>{{this.valor}}</td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>

</body>

</html>
